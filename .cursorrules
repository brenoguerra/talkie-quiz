{
  "rules": [
    {
      "pattern": "**/*.{ts,tsx,js,jsx}",
      "autoformat": true,
      "autofix": true,
      "autocomplete": true,
      "lint": true
    },
    {
      "pattern": "**/*.{css,scss,less}",
      "autoformat": true,
      "autofix": true,
      "lint": true
    },
    {
      "pattern": "**/*.{json,md,yaml,yml}",
      "autoformat": true,
      "lint": true
    },
    {
      "pattern": "**/*.{html,xml}",
      "autoformat": true,
      "lint": true
    }
  ],
  "formatOnSave": true,
  "organizeImportsOnSave": true,
  "removeUnusedImportsOnSave": true,
  "defaultFormatter": "prettier",
  "gitCommitOnSave": true,
  "gitConfig": {
    "commitMessageTemplate": "{{type}}({{scope}}): {{description}}",
    "branchPrefix": "feature/",
    "remoteName": "origin",
    "defaultBranch": "main",
    "generateCommitMessage": true,
    "commitTypes": [
      "feat",
      "fix",
      "docs",
      "style",
      "refactor",
      "test",
      "chore",
      "perf",
      "ci",
      "build",
      "revert"
    ],
    "commitScopes": [
      "ui",
      "api",
      "quiz",
      "auth",
      "config",
      "deps",
      "core",
      "docs",
      "tests",
      "ci"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100,
    "bracketSpacing": true,
    "arrowParens": "avoid"
  },
  "eslint": {
    "fix": true,
    "cache": true,
    "maxWarnings": 50
  }
}
